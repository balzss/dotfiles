! URxvt

! General settings
URxvt.iso14755 : false
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: True
URxvt.internalBorder:  0

!URxvt.copyCommand:  xclip -i -selection clipboard
!URxvt.pasteCommand: xclip -o -selection clipboard

! Keybindings
!URxvt.keysym.Shift-Control-C: perl:clipboard:copy
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Font
URxvt.font:     xft:DejaVu Sans Mono for Powerline-13, xft:FontAwesome-13
URxvt.boldFont: xft:DejaVu Sans Mono for Powerline-13, xft:FontAwesome-13
URxvt.letterSpace: -1

! Gruvbox theme
URxvt.background: #282828
URxvt.foreground: #ebdbb2

! Black + DarkGrey
URxvt.color0:  #282828
URxvt.color8:  #928374
! DarkRed + Red
URxvt.color1:  #cc241d
URxvt.color9:  #fb4934
! DarkGreen + Green
URxvt.color2:  #98971a
URxvt.color10: #b8bb26
! DarkYellow + Yellow
URxvt.color3:  #d79921
URxvt.color11: #fabd2f
! DarkBlue + Blue
URxvt.color4:  #458588
URxvt.color12: #83a598
! DarkMagenta + Magenta
URxvt.color5:  #b16286
URxvt.color13: #d3869b
! DarkCyan + Cyan
URxvt.color6:  #689d6a
URxvt.color14: #8ec07c
! LightGrey + White
URxvt.color7:  #a89984
URxvt.color15: #ebdbb2


! Layout
/* rofi.width:                          50 */
/* rofi.lines:                          1 */
rofi.columns:                        1
rofi.color-enabled:                  true
rofi.color-normal:                   #282828,#ebdbb2,#353535,#458588,#ebdbb2
rofi.color-urgent:                   #282828,#d79921,#353535,#d79921,#282828
rofi.color-active:                   #282828,#ebdbb2,#353535,#458588,#ebdbb2
rofi.color-window:                   #dd282828,#458488

! Behaviour
rofi.terminal:                       urxvt
rofi.levenshtein-sort:               true
rofi.fuzzy:                          true
rofi.kb-cancel:                      Escape,Control+c
rofi.font:     DejaVu Sans Mono for Powerline 22
rofi.hide-scrollbar: true
rofi.kb-row-up: Super+k
rofi.kb-row-down: Super+j
rofi.kb-mode-next: Super+l
rofi.kb-mode-previous: Super+h
rofi.fullscreen: true
rofi.opacity: 100
rofi.fake-transparency: true
rofi.padding: 300
rofi.auto-select: false
